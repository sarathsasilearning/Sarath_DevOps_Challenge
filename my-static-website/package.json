{
  "name": "my-static-site",
  "version": "1.0.0",
  "description": "A simple static site served with Node.js",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "jest": "^27.0.0",
    "jest-junit": "^13.0.0"
  },
  
  "jest": {
    "reporters": [
      "default",
      ["jest-junit", {
        "outputDirectory": "./test-results",
        "outputName": "test-results.xml"
      }]
    ]
  }
}